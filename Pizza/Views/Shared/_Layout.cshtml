<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Pizza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
          integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link rel="stylesheet" href="~/Pizza.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm sticky-top mb-0">
        <div class="container">

            <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="collapse navbar-collapse justify-content-between">
                <!-- Center the menu -->

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white fs-4" asp-area="" asp-controller="Home"
                           asp-action="Index">Viverre</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fs-4" asp-area="" asp-controller="Menu"
                           asp-action="Index">Menu</a>
                    </li>

                </ul>
                

                <!-- Right side (login/user) -->
                <div class="d-flex align-content-center">
                    <div class="navbar-nav">
                        <li class="nav-item pt-2">
                            <a class="nav-link text-white fs-4"><i class="fa-solid fa-cart-shopping"></i></a>
                        </li>
                    </div>
                   
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container-fluid">
    <div class="row">
        @RenderSection("Sidebar", required: false)

        <main class="col p-0">
            @RenderBody()
        </main>
    </div>
</div>

<footer class="footer text-muted">
    <div class="container">
        <p>
            &copy; 2025 - Pizza - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </p>
    </div>
    <style>
        footer p {
            color: white;
        }

        footer a {
            color: white;
        }
        .btn {
            display: inline-block;
            padding: .9rem 1.25rem;      /* This fixes the padding */
            border-radius: 999px;
            font-weight: 600;            /* This fixes the boldness */
            text-decoration: none;
            transition: transform .12s ease, box-shadow .12s ease, background-color .2s ease, color .2s ease;
            margin: .25rem .4rem;        /* This fixes the margins */
        }
    </style>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>