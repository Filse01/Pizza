@using OrderIndexViewModel = Pizza.ViewModels.Orders.OrderIndexViewModel
@model IEnumerable<OrderIndexViewModel>
<style>
    /* Custom Table Styling */
    .table-custom {
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        background-color: white;
    }

    .table-custom thead {
        background-color: #343a40; /* Dark header */
        color: white;
    }

    .table-custom th {
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.05em;
        border: none;
        padding: 1rem;
    }

    .table-custom td {
        vertical-align: middle;
        padding: 1rem;
        border-bottom: 1px solid #f1f1f1;
    }

    .table-custom tbody tr {
        transition: background-color 0.2s;
    }

    .table-custom tbody tr:hover {
        background-color: #f8f9fa; /* Light grey on hover */
    }

    /* Ingredient Badges */
    .badge-ingredient {
        background-color: #e9ecef;
        color: #495057;
        font-weight: 500;
        font-size: 0.8rem;
        padding: 0.35em 0.65em;
        border-radius: 50rem;
        margin-right: 4px;
        margin-bottom: 4px;
        display: inline-block;
    }
    
    /* Price Styling */
    .price-tag {
        font-weight: bold;
        color: #198754; /* Success green */
        font-size: 1.1rem;
    }

    /* Action Buttons Area */
    .action-group {
        display: flex;
        gap: 0.5rem;
    }
    .short-id {
        max-width: 10rch;
        overflow: clip;
        display: inline-block;
        white-space: nowrap;
        text-overflow: ellipsis; 
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show m-4 shadow-sm" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container py-5">
    <a asp-controller="Home" asp-action="Index" class="btn btn-dark p-2 mb-1">‚Üê Back</a>
    

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">Manage Pizzas</h2>
            <p class="text-muted mb-0">View, edit, or delete items from the menu.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-3">
            <div class="mb-3 text-muted" style="font-size: 3rem;">
                <i class="fas fa-pizza-slice"></i>
            </div>
            <h4>No Orders Found</h4>
            <p class="text-muted">It looks like there are none orders.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                <tr>
                    <th scope="col" style="width: 7%;">Order Id</th>
                    <th scope="col" style="width: 16.6%;">Address</th>
                    <th scope="col" style="width: 16.6%;">Pizzas</th>
                    <th scope="col" style="width: 16.6%;">Phone Number</th>
                    <th scope="col" style="width: 16.6%;">Person Name</th>
                    <th scope="col" style="width: 16.6%;">Price</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="fw-bold text-dark">
                            <span class="short-id">@order.Id</span>
                        </td>

                        <td>
                            @order.Address
                        </td>

                        <td>
                            @foreach (var pizza in order.OrderItems)
                            {
                                var lastItem = order.OrderItems.Last();
                                if (pizza.Equals(lastItem))
                                {
                                    <span>@pizza.Pizza.Name</span>
                                }
                                else
                                {
                                    <span>@pizza.Pizza.Name,</span>
                                }
                                
                            }
                        </td>
                        <td>
                            @order.PhoneNumber
                        </td>
                        <td>
                            @order.FirstName @order.LastName 
                        </td>

                        <td>
                            <span class="price-tag">$@order.Price.ToString("F2")</span>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>