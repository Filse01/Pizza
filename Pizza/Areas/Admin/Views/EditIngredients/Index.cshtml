@using EditIngredientsViewModel = Pizza.ViewModels.EditIngredientsViewModel
@model EditIngredientsViewModel
<div class="container justify-content-center align-self-center mt-5">
    <a asp-controller="Home" asp-action="Index" class="btn btn-dark p-2 mb-1">‚Üê Back</a>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">Ingredient Name</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ing in Model.Ingredients)
        {
            <tr>
                <th scope="row">@ing.Name</th>
                <td>
                    <div class="d-flex align-items-center">
                        <div class="d-grid gap-2">
                            <a asp-controller="EditIngredients" asp-action="DeleteIngredient" asp-route-id="@ing.Id" class="btn btn-secondary">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </td>
            </tr>

        }
        </tbody>
    </table>
</div>