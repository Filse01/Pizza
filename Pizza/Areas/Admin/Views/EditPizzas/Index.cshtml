@using EditPizzasViewModel = Pizza.ViewModels.EditPizzasViewModel
@model EditPizzasViewModel
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show m-5" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<div class="container justify-content-center align-self-center mt-5">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">Pizza Name</th>
            <th scope="col">Ingredients</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var pizza in Model.Pizzas)
        {
            <tr>
                <th scope="row">@pizza.Name</th>
                <td>@string.Join(", ", pizza.Ingredients.Select(i => i.Ingredient.Name))</td>
                <td>@pizza.Price</td>
                <td>
                    <div class="d-flex align-items-center" >
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("EditPizza", "EditPizzas", new { id = pizza.Id })" class="btn btn-primary">
                                <i class="fas fa-pen"></i> Edit
                            </a>
                        
                            <a asp-controller="EditPizzas" asp-action="DeletePizza" asp-route-id="@pizza.Id" class="btn btn-secondary">
                                <i class="fas fa-trash"></i> Delete 
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
            
        }
        </tbody>
    </table>
</div>